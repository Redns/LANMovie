@page "/playvideo/{*videoId}"

@if (!string.IsNullOrEmpty(VideoId))
{
	var routeUrls = VideoId.Split("/");
	var videoType = routeUrls[0];
	if((videoType == "movie") && (routeUrls.Length == 2))
	{
		// 播放电影时格式为movie/{movieId}
		<video autoplay controls controlslist="nodownload" style="width:90%; max-width:600px;">
			<source src=@($"/api/video/movie/{routeUrls[1]}")>
		</video>
	}
	else if((videoType == "teleplay") && (routeUrls.Length == 3))
	{
